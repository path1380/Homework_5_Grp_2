# Makefile for Homework 5 main file

FC = gfortran
LD = gfortran
SRC = src
BIN = bin
F90FLAGS = -fbounds-check -Wall -fbacktrace -g
FFLAGS = -O3
_OBJECTS = type_defs.o quad_element.o legendre_module.o problemsetup.o assemble.o weights.o annulus_line.o
OBJECTS = $(patsubst %,$(BIN)/%,$(_OBJECTS))
EXECUTABLE = annulus_line.x

.PHONY: clean
$(EXECUTABLE): $(OBJECTS)
	$(LD) -o $(EXECUTABLE) $(OBJECTS) -I$(BIN)/
$(BIN)/%.o : $(SRC)/%.f90
	$(FC) $(F90FLAGS) -c -o $@ $< -J$(BIN)/
$(BIN)/%.o : $(SRC)/%.f
	$(FC) $(FFLAGS) -c -o $@ $<
clean:
	rm -f $(OBJECTS) $(EXECUTABLE) $(BIN)/*.mod
